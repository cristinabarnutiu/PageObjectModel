    <parameter name="pass" value="SuperSecretPassword!"/>
    <parameter name="successLogoutMessage" value="You logged out of the secure area!"/>
    <parameter name="mesajLogin" value="You logged into a secure area!"/>

    <test name="Login">
        <classes>
            <class name="com.herokuapp.tests.LoginTests"/>
        </classes>
    </test>

    <test name="Logout">
        <classes>
            <class name="com.herokuapp.tests.LogoutTests"/>
        </classes>
    </test>

    <test name="Checkbox">
        <classes>
            <class name="com.herokuapp.tests.CheckboxTests"/>
        </classes>
    </test>

    <test name="Dropdown">
        <classes>
            <class name="com.herokuapp.tests.DropdownTests"/>
        </classes>
    </test>


</suite>
